rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Development/Local Network Rules:
     * These rules are simplified for local network operation where user authentication
     * is not required. It allows any device on the network to read from and write
     * to the database.
     *
     * WARNING: These rules are insecure and should NOT be used in a production
     * environment with internet access. For production, you must implement
     * proper user authentication and role-based access control.
     */

    match /settings/{settingId} {
      allow read, write: if true;
    }

    match /stations/{stationId} {
      allow read, write: if true;
    }

    match /tickets/{ticketId} {
      allow read, write: if true;
    }
  }
}
