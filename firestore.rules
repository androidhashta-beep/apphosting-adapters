rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read/write settings.
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read/write stations.
    match /stations/{stationId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read/write tickets.
    match /tickets/{ticketId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read/write counters.
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
