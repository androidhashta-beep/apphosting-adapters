rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /stations/{stationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /tickets/{ticketId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /counters/{counterId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
