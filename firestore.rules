rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper Functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // This function must not throw an error if the user document does not exist yet.
    function isRole(role) {
      let userDocPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return request.auth != null && exists(userDocPath) && get(userDocPath).data.role == role;
    }
    
    function isAdmin() {
      return isRole('admin');
    }

    function isStaff() {
      return isRole('staff') || isAdmin();
    }
    
    // Collection Rules
    match /settings/{settingId} {
      allow read: if true;
      // Allow write if user is an admin OR if we are setting up the first user by flipping the flag.
      // This rule must handle the case where the settings document does not yet exist.
      allow write: if isAdmin() || (request.resource.data.firstUserCreated == true && (resource == null || resource.data.firstUserCreated == false));
    }
    match /stations/{stationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /tickets/{ticketId} {
      // Allow anyone (including anonymous kiosk users) to create a ticket
      allow create: if request.auth != null;
      // Allow any authenticated user to read, but staff/admins can update/delete
      allow read: if request.auth != null;
      allow update, delete: if isStaff();
    }
    match /counters/{counterId} {
      // Allow any authenticated user (kiosk) to read/write counters
      allow read, write: if request.auth != null;
    }
    match /users/{userId} {
      // Allow a user to create their own user document, and check that the uid in the document is their own.
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.uid == request.auth.uid;

      // Allow any authenticated user to perform a list query.
      // The results will be filtered by the 'read' rules below.
      allow list: if request.auth != null;

      // Allow a user to read their own document.
      // Allow an admin to read any user document.
      allow read: if isOwner(userId) || isAdmin();

      // Allow a user to update their own document.
      // Allow an admin to update any user document.
      allow update: if isOwner(userId) || isAdmin();

      // Only allow admins to delete documents.
      allow delete: if isAdmin();
    }
  }
}
