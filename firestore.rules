rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings: All authenticated users (kiosk, display, staff, admin) can read.
    // Staff/Admin can write. We'll just check for auth for now.
    match /settings/{settingId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Stations: All authenticated users can read.
    // Staff/Admin can write.
    match /stations/{stationId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Tickets: All authenticated users can read and create.
    // Staff can update/delete.
    match /tickets/{ticketId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Counters: Kiosk (authenticated) needs to read/write in a transaction.
    match /counters/{counterId} {
      allow read, create, update, delete: if request.auth != null;
    }
  }
}
