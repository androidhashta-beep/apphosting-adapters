{
  "entities": {
    "Service": {
      "title": "Service",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "label",
        "description",
        "icon"
      ]
    },
    "ImagePlaceholder": {
      "title": "ImagePlaceholder",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "imageHint": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "image",
            "video"
          ]
        },
        "useOwnAudio": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "description",
        "imageUrl",
        "imageHint",
        "type"
      ]
    },
    "AudioTrack": {
      "title": "AudioTrack",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "description",
        "url"
      ]
    },
    "Settings": {
      "title": "Settings",
      "type": "object",
      "properties": {
        "companyName": {
          "type": "string"
        },
        "services": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/Service"
          }
        },
        "placeholderImages": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/ImagePlaceholder"
          }
        },
        "backgroundMusic": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/AudioTrack"
          }
        }
      }
    },
    "Station": {
      "title": "Station",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "open",
            "closed"
          ]
        },
        "mode": {
          "type": "string",
          "enum": [
            "regular",
            "all-in-one",
            "payment-only",
            "certificate-only"
          ]
        },
        "currentTicketId": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "type",
        "status",
        "mode"
      ]
    },
    "Ticket": {
      "title": "Ticket",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "ticketNumber": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "waiting",
            "serving",
            "served",
            "skipped"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "servedBy": {
          "type": "string"
        },
        "calledAt": {
          "type": "string",
          "format": "date-time"
        },
        "servedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "ticketNumber",
        "type",
        "status",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/settings/{settingId}",
        "definition": {
          "entityName": "Settings",
          "schema": {
            "$ref": "#/backend/entities/Settings"
          },
          "description": "Stores global application settings like company name and service types."
        }
      },
      {
        "path": "/stations/{stationId}",
        "definition": {
          "entityName": "Station",
          "schema": {
            "$ref": "#/backend/entities/Station"
          },
          "description": "Represents a physical service station."
        }
      },
      {
        "path": "/tickets/{ticketId}",
        "definition": {
          "entityName": "Ticket",
          "schema": {
            "$ref": "#/backend/entities/Ticket"
          },
          "description": "Represents a single queue ticket generated by a user."
        }
      }
    ]
  }
}