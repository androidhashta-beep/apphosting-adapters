rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings: Allow any authenticated user to read and write.
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // Stations: Allow any authenticated user to read and write.
    match /stations/{stationId} {
      allow read, write: if request.auth != null;
    }

    // Tickets: Allow any authenticated user to read and write.
    match /tickets/{ticketId} {
      allow read, write: if request.auth != null;
    }

    // Counters: Allow any authenticated user to read and write.
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
