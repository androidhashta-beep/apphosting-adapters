{
  "entities": {
    "Service": {
      "title": "Service",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "label",
        "description",
        "icon"
      ]
    },
    "ImagePlaceholder": {
      "title": "ImagePlaceholder",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "imageHint": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "image",
            "video"
          ]
        },
        "useOwnAudio": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "description",
        "imageUrl",
        "imageHint",
        "type"
      ]
    },
    "AudioTrack": {
      "title": "AudioTrack",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "description",
        "url"
      ]
    },
    "DefaultConfiguration": {
      "title": "DefaultConfiguration",
      "description": "A snapshot of the services and stations configuration, saved as a default.",
      "type": "object",
      "properties": {
        "services": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/Service"
          }
        },
        "stations": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/Station"
          }
        }
      }
    },
    "Settings": {
      "title": "Settings",
      "type": "object",
      "properties": {
        "companyName": {
          "type": "string"
        },
        "companyLogoUrl": {
          "type": "string",
          "description": "URL for the company logo, relative to the public folder."
        },
        "services": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/Service"
          }
        },
        "placeholderImages": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/ImagePlaceholder"
          }
        },
        "backgroundMusic": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/AudioTrack"
          }
        },
        "backgroundMusicVolume": {
          "type": "number",
          "description": "The master volume for background music, from 0 to 1."
        },
        "defaultConfiguration": {
          "$ref": "#/backend/entities/DefaultConfiguration"
        }
      }
    },
    "Station": {
      "title": "Station",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "serviceIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "The IDs of the services this station can handle."
        },
        "status": {
          "type": "string",
          "enum": [
            "open",
            "closed"
          ]
        },
        "currentTicketId": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "status"
      ]
    },
    "Ticket": {
      "title": "Ticket",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "ticketNumber": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "waiting",
            "serving",
            "served",
            "skipped"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "servedBy": {
          "type": "string"
        },
        "calledAt": {
          "type": "string",
          "format": "date-time"
        },
        "servedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "ticketNumber",
        "type",
        "status",
        "createdAt"
      ]
    },
    "Counter": {
      "title": "Counter",
      "type": "object",
      "properties": {
        "count": {
          "type": "number",
          "description": "The current count for a ticket sequence."
        },
        "lastReset": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the counter was last reset (typically daily)."
        }
      },
      "required": [
        "count",
        "lastReset"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user profile information, including their role.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "description": "The user's email address. Can be 'anonymous-user'."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "role": {
          "type": "string",
          "enum": [
            "admin",
            "staff"
          ],
          "description": "The role of the user, which determines their access level."
        }
      },
      "required": [
        "uid",
        "email",
        "role"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/settings/{settingId}",
        "definition": {
          "entityName": "Settings",
          "schema": {
            "$ref": "#/backend/entities/Settings"
          },
          "description": "Stores global application settings like company name and service types."
        }
      },
      {
        "path": "/stations/{stationId}",
        "definition": {
          "entityName": "Station",
          "schema": {
            "$ref": "#/backend/entities/Station"
          },
          "description": "Represents a physical service station."
        }
      },
      {
        "path": "/tickets/{ticketId}",
        "definition": {
          "entityName": "Ticket",
          "schema": {
            "$ref": "#/backend/entities/Ticket"
          },
          "description": "Represents a single queue ticket generated by a user."
        }
      },
      {
        "path": "/counters/{serviceId}",
        "definition": {
          "entityName": "Counter",
          "schema": {
            "$ref": "#/backend/entities/Counter"
          },
          "description": "Stores the current ticket number counter for each service, reset daily."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profile information and roles."
        }
      }
    ]
  }
}
