rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings
    match /settings/{settingId} {
      // Any authenticated user can read settings.
      allow get: if request.auth != null;
      // You might want to restrict write access to admins in the future.
      allow create, update, delete: if request.auth != null;
    }
    match /settings {
        // Allow listing settings (though you likely only ever get 'app').
        allow list: if request.auth != null;
    }

    // Stations
    match /stations/{stationId} {
      // Any authenticated user can read station details.
      allow get: if request.auth != null;
      // You might want to restrict write access to admins/staff.
      allow create, update, delete: if request.auth != null;
    }
    match /stations {
        // Any authenticated user can list all stations.
        allow list: if request.auth != null;
    }

    // Tickets
    match /tickets/{ticketId} {
      // Any authenticated user can get a specific ticket.
      allow get: if request.auth != null;
      // Any authenticated user can create a ticket (kiosk).
      // Staff/admins can update/delete.
      allow create, update, delete: if request.auth != null;
    }
    match /tickets {
        // Any authenticated user can query/list tickets (display, staff).
        allow list: if request.auth != null;
    }

    // Counters
    match /counters/{counterId} {
      // Authenticated users (kiosk) need to read/write in a transaction.
      allow get, create, update, delete: if request.auth != null;
    }
    match /counters {
        // Listing counters is probably not needed, but we'll allow it for now.
        allow list: if request.auth != null;
    }
  }
}
