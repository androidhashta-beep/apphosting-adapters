rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper Functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isRole(role) {
      let userDocPath = /databases/$(database)/documents/users/$(request.auth.uid);
      // This is safe. If the doc or the role field doesn't exist, it returns false, not an error.
      return request.auth != null && get(userDocPath).data.role == role;
    }
    
    function isAdmin() {
      return isRole('admin');
    }

    function isStaff() {
      return isRole('staff') || isAdmin();
    }
    
    // Collection Rules
    match /settings/{settingId} {
      allow read: if true;
      // Allow admins to write. Also allow the specific transaction of setting the firstUserCreated flag.
      allow write: if isAdmin() || 
        (request.resource.data.firstUserCreated == true && (resource == null || resource.data.firstUserCreated == false));
    }
    match /stations/{stationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /tickets/{ticketId} {
      // Allow anyone (including anonymous kiosk users) to create a ticket
      allow create: if request.auth != null;
      // Allow any authenticated user to read, but staff/admins can update/delete
      allow read: if request.auth != null;
      allow update, delete: if isStaff();
    }
    match /counters/{counterId} {
      // Allow any authenticated user (kiosk) to read/write counters
      allow read, write: if request.auth != null;
    }
    match /users/{userId} {
      // Allow a user to create their own user document, with strict role validation.
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.uid == request.auth.uid && (
        // Case 1: Becoming an ADMIN is only allowed if the first user flag is not yet true.
        (
          request.resource.data.role == 'admin' &&
          (!exists(/databases/$(database)/documents/settings/app) || get(/databases/$(database)/documents/settings/app).data.firstUserCreated == false)
        ) ||
        // Case 2: Becoming STAFF is allowed if the first user flag is already true.
        (
          request.resource.data.role == 'staff' &&
          exists(/databases/$(database)/documents/settings/app) && get(/databases/$(database)/documents/settings/app).data.firstUserCreated == true
        )
      );

      // Allow any authenticated user to perform a list query.
      allow list: if request.auth != null;

      // Allow a user to read their own document.
      // Allow an admin to read any user document.
      allow read: if isOwner(userId) || isAdmin();

      // Allow a user to update their own document.
      // Allow an admin to update any user document.
      allow update: if isOwner(userId) || isAdmin();

      // Only allow admins to delete documents.
      allow delete: if isAdmin();
    }
  }
}
