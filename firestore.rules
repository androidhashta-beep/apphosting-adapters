rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Settings are public to allow the app to initialize.
     * Writes are protected.
     */
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    /**
     * Stations and tickets are publicly readable for the display screen,
     * but can only be modified by authenticated users.
     */
    match /stations/{stationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /tickets/{ticketId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
