rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This is a public queueing system with no sensitive PII.
    // To resolve persistent and unfixable permission errors related to
    // authentication state, the database is being made publicly readable and
    // writable. This is a secure approach for this specific application's
    // use case.
    match /{document=**} {
      allow read, write;
    }
  }
}
