rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows any authenticated user to read and write to any document in the database.
    // This is a simple, permissive rule suitable for development and for apps
    // where all authenticated users have the same level of access.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
