rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings: Allow any authenticated user to read and write.
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // Stations: Allow authenticated users to list the collection, and get/write individual documents.
    match /stations/{stationId} {
      allow get, write: if request.auth != null;
    }
    match /stations {
      allow list: if request.auth != null;
    }

    // Tickets: Allow authenticated users to list the collection, and get/write individual documents.
    match /tickets/{ticketId} {
      allow get, write: if request.auth != null;
    }
    match /tickets {
      allow list: if request.auth != null;
    }

    // Counters: Allow any authenticated user to read and write.
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
