rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings: Allow any authenticated user to read and write.
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // Stations: Allow authenticated users to access.
    match /stations/{stationId} {
      // Allow individual doc reads (get) and all writes (create, update, delete)
      allow read, write: if request.auth != null;
    }
    match /stations {
        // Allow collection reads (list)
        allow read: if request.auth != null;
    }

    // Tickets: Allow authenticated users to access.
    match /tickets/{ticketId} {
      // Allow individual doc reads (get) and all writes (update, delete)
      allow read, write: if request.auth != null;
    }
    match /tickets {
      // Allow collection reads (list) and creating new tickets (addDoc)
      allow read, create: if request.auth != null;
    }

    // Counters: Allow any authenticated user to read and write.
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
