rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Authenticated users can read and write to all collections.
     * This is a basic security rule for a live application. It ensures that
     * only users who have signed in (even anonymously) can access the data.
     */

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    match /stations/{stationId} {
      allow read, write: if request.auth != null;
    }

    match /tickets/{ticketId} {
      allow read, write: if request.auth != null;
    }
  }
}
