rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper Functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isRole(role) {
      // Check for existence before getting data to prevent errors on new user creation
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
      return isRole('admin');
    }

    function isStaff() {
      return isRole('staff') || isAdmin();
    }
    
    // Collection Rules
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /stations/{stationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /tickets/{ticketId} {
      // Allow anyone (including anonymous kiosk users) to create a ticket
      allow create: if request.auth != null;
      // Allow any authenticated user to read, but staff/admins can update/delete
      allow read: if request.auth != null;
      allow update, delete: if isStaff();
    }
    match /counters/{counterId} {
      // Allow any authenticated user (kiosk) to read/write counters
      allow read, write: if request.auth != null;
    }
    match /users/{userId} {
      // CREATE: A user can create their own profile.
      allow create: if isOwner(userId);
      
      // READ: An admin can read any profile. A user can read their own.
      allow read: if isAdmin() || isOwner(userId);
      
      // LIST: Any authenticated user can query the users collection.
      // This is required for the initial "first admin" check to succeed.
      allow list: if request.auth != null;
      
      // UPDATE: An admin can update any profile. A user can update their own.
      // This is also required for the "force password change" flow.
      allow update: if isAdmin() || isOwner(userId);
      
      // DELETE: Only admins can delete profiles.
      allow delete: if isAdmin();
    }
  }
}
