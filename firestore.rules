rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings: Allow any authenticated user to get and write settings.
    match /settings/{settingId} {
      allow get, write: if request.auth != null;
    }

    // Stations: Control access to the stations collection.
    match /stations/{stationId} {
      // Allow getting, updating, and deleting a single station document.
      allow get, update, delete: if request.auth != null;
    }
    match /stations {
        // Allow listing the collection and creating new documents in it.
        allow list, create: if request.auth != null;
    }

    // Tickets: Control access to the tickets collection.
    match /tickets/{ticketId} {
      // Allow getting, updating, and deleting a single ticket document.
      allow get, update, delete: if request.auth != null;
    }
    match /tickets {
      // Allow listing the collection and creating new documents in it.
      allow list, create: if request.auth != null;
    }

    // Counters: Allow any authenticated user to read and write.
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
